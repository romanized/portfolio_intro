@page
@model IndexModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Vul de volgende gegevens in</h2>
            <p>Nebi Canlioglu 090006 - Intro Week C#</p>
            <form method="post">
                <div class="mb-3">
                    <label for="Naam" class="form-label">* Volledige naam:</label>
                    <input type="text" class="form-control" name="Naam" required asp-for="Naam" placeholder="Nebi Canlioglu" />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">* Email:</label>
                    <input type="email" class="form-control" name="Email" required asp-for="Email" placeholder="090006@glr.nl" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Datum" class="form-label">* Geboortedatum:</label>
                    <input type="date" class="form-control" name="Datum" required asp-for="Datum" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Verstuur</button>
            </form>

            <hr class="my-4">

            <div class="results">
                <p>@Model.Resultaat1</p>
                <p>@Model.Resultaat2</p>
                <p>@Model.Resultaat3</p>
            </div>
        </div>
    </div>
</div>
